datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Customer {
  assets    Asset[]
  comments  String?
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  phone     String?
  updatedAt DateTime @updatedAt
}

model Asset {
  address    String?
  assetType  EnumAssetAssetType?
  createdAt  DateTime            @default(now())
  customer   Customer?           @relation(fields: [customerId], references: [id])
  customerId String?
  id         String              @id @default(cuid())
  name       String?
  updatedAt  DateTime            @updatedAt
}

enum EnumAssetAssetType {
  Villa
  Tant
  Car
}